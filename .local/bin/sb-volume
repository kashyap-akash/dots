#!/bin/sh

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ðŸ”‡ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo  " ó°¸ˆ Muted "  && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ï€¨ " ;;
	$((vol >= 30)) ) icon="ï€§" ;;
	$((vol >= 1)) ) icon="ï€¦" ;;
	* ) echo  " ó°¸ˆ Muted " && exit ;;
esac

echo " $icon $vol% " 
#notify-send "$icon$vol" && exit
