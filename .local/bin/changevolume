#!/bin/sh

# Increment, decrement, or mute the volume and send a notification
# of the current volume level.

send_notification() {
	volume=$(pamixer --get-volume)
  case 1 in
	$((volume >= 70)) ) icon="ï€¨ " ;;
	$((volume >= 30)) ) icon="ï€§ " ;;
	$((volume >= 1)) ) icon="ï€¦ " ;;
	* ) echo ðŸ”‡ && exit ;;
esac

	dunstify -a "changevolume" -u low -r 9993 -h int:value:"$volume" -i "volume-$1" "  $icon Volume: ${volume}%" -t 2000
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 5 
	send_notification "$1"
	;;
down)
	pamixer -u
	pamixer -d 5 
	send_notification "$1"
	;;
mute)
	pamixer -t
	if eval "$(pamixer --get-mute)"; then
		dunstify -a "changevolume" -t 2000 -r 9993 -u low -i "volume-mute" "Muted" 
	else
		send_notification
	fi
	;;
esac
